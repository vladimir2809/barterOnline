    {{#if route}}
        <script>
            window.location='/';
        </script>
    {{/if}}
    {{#if flagExit}}
        <script>
            window.location='/';
        </script>
    {{/if}}
    {{#if dataUser}}
        <style>
            .userIn{
                display: block;
            }
            .userNoIn{
                display: none;
            }
            
        </style>
    {{else}}
      <style>
            .userIn{
                display: none;
            }
            .userNoIn{
                display: block;
            }
            .main-menu{
                width: 14rem;!important;
                padding-bottom: 3rem
            }
        </style>
    {{/if}}    
    <div class="header">
        <div class="header__logoAndCity" >
            <div class="logo" id="logo">
                <h1 class="logo__title">BARTER 
                <span class="logo__title-span">ONLINE</span>
                </h1>
            </div>
            <h4 class="header__city">Москва</h4>
        </div>
        <div class="avatar" id="avatar">
         
            {{#if dataUser}}
                <div class="avatar__circleBorder">
                    <span>{{dataUser}}</span>
                </div>
            {{else}}
                <img src="/img/avatar.png" alt="" class="avatar__image">
            {{/if}}
